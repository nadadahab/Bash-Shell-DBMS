#function show menu
show_menus() {
	echo "~~~~~~~~~~~~~~~~~~~~~"	
	echo " D B M S- M E N U"
	echo "~~~~~~~~~~~~~~~~~~~~~"
    echo "1. Create Database"
	echo "2. List Datebases"
	echo "3. Drop Datebase"
	echo "4. Create Table"
	echo "5. Alter Table"
	echo "6. Add Record"
	echo "7. Edit Record"
	echo "8. Delete Record"
	echo "9. Select Records" 
        echo "10. Display A Table"
	echo "11. Sort Table"
	echo "12. Drop Table" 
	echo "13. Exit"
}

#function read
read_options(){
	local choice
	read -p "Enter A Choice [ 1 - 13 ] " choice
	case $choice in
		1)createDB;;
		2)ls $DBMS;;
		3)dropDB;;
		4)createTable;;
		5)alterTable;;
		6) ;;
        7) ;;
		8) ;;
		9)selectRecord;;
		10)displayTable;;
		11)sortTable;;
		12)dropTable;;
		13) exit 0;;
		*) echo "Invalid Option";;
	esac
}

while true
do
 
	show_menus
	read_options
done

